            android:name="com.parse.CLIENT_KEY"
            android:value="6UxjrWfXhrXwReeS5HpCrN6p2IiDyAjUsxC9S2Q3" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>

